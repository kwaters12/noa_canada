<%= form_for @order do %>
  
    <div class="order-form">
      <!-- .col-md-6.file-attach
      -->
      <div class="col-md-6 col-md-offset-3">
        <div class="cta-selection">
          <div class="form-area">
            <div id="dropin"></div>
             <input type="submit" value="Pay $52.50" class="btn btn-primary btn-raised">
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
<%= @params %>

<script type="text/javascript">
$(document).ready(function() {
  function setupBT() {
    braintree.setup("<%=@client_token%>", 'dropin', {
      container: 'dropin'
    });
  }
  if (window.addEventListener)
    window.addEventListener("load", setupBT, false);
  else if (window.attachEvent)
    window.attachEvent("onload", setupBT);
  else window.onload = setupBT;
});

</script>