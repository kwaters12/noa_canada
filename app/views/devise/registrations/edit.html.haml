.container
  .landing-page
    .form-fields   
      .col-md-2.sidebar-col
        = render "/homepage/sidebar"
      .col-md-10
        %h2 Edit Account Info
        .cta-selection
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = f.error_notification
            .col-md-3
              %h4 Account Details
              = f.input :email, autofocus: true, required: true, input_html: { class: 'form-control' }, label: "Email Address"
              = f.input :sub_brokerage_name, autofocus: true, input_html: { class: 'form-control' }, label: "Sub-Brokerage"
              = f.input :brokerage_name, autofocus: true, input_html: { class: 'form-control' }, label: "Brokerage"
              = f.input :phone_number, autofocus: true, input_html: { class: 'form-control' }, label: "Cell Phone Number"
              = f.input :office_phone_number, autofocus: true, input_html: { class: 'form-control' }, label: "Office Phone Number"
              / - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              /   %p
              / Currently waiting confirmation for: #{resource.unconfirmed_email}
            .col-md-3
              %h4 Change Password
              = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control' }, label: 'Current Password'
              = f.input :password, autocomplete: "off", label: 'New Password', input_html: { class: 'form-control' }
              = f.input :password_confirmation, required: false, input_html: { class: 'form-control' }, label: 'Password Confirmation'
              
              .form-actions
            .col-md-3
              = f.button :submit, "Update Account", class: 'btn btn-primary btn-raised'
            .col-md-3
              %h4 Cancel my account
              %p
                If you wouldn't mind, could you please provide us a reason first?
                %br
                = link_to "Contact Us", contact_path
                %br
                %br
              %p
                Otherwise, click here to: 
                %br
                #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
              %br
              %br
              = link_to "Back", :back