.container.text-center
  .cta-selection
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      %h3 <strong>Edit Your Profile</strong>
      .col-md-3
        = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, label: "Email Address"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
        Currently waiting confirmation for: #{resource.unconfirmed_email}
      .col-md-3
        = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: 'form-control' }
      .col-md-3
        = f.input :password_confirmation, required: false, input_html: { class: 'form-control' }, label: 'Password Confirmation'
      .col-md-3
        = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control' }, label: 'Current Password'
        .form-actions
      = f.button :submit, "Update", class: 'btn btn-primary btn-raised'
      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
      = link_to "Back", :back