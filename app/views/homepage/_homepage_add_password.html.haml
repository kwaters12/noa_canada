.container
  
  = form_for @agent, :url => update_agent_confirmation_path, :html => {:method => 'put'}, :id => 'activation-form' do |f|
    / = devise_error_messages!  
    - if @agent.first_name

      %h2 Account Activation for #{@agent.name_display}
      / - if @requires_password
      .add-password-form
        .col-md-6
          = f.label :password,'Choose a Password:'
          = f.password_field :password, class: 'form-control'
        .col-md-6
          = f.label :password_confirmation,'Password Confirmation:'
          = f.password_field :password_confirmation, class: 'form-control'
        = hidden_field_tag :confirmation_token, @agent.confirmation_token
        .text-right
          = f.submit "Activate", class: 'btn btn-primary btn-raised'