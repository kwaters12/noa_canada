.container
  .landing-page
    .form-fields      
      - if agent_signed_in?
        - if current_agent.encrypted_password === ''     
          = render 'homepage_add_password'
        - else 
          .col-md-2.sidebar-col
            = render "sidebar"
          .col-md-10
            - if current_agent.orders.empty?
              .col-md-6.col-md-offset-3
                .no-results.form-fields
                  %h2 Welcome to NOA Canada! 
                  Click this big blue button to make your first application:
                  = link_to "Apply For Your First NOA", new_order_path, class: 'btn btn-primary btn-raised'
            - else
              = render 'dashboard'    
      - else
        / %h2 Welcome to NOA Canada
        .cta-heading
          .container
            .col-md-5
              .header-logo
                = link_to image_tag('logo.png'), root_url
            .col-md-7
              .row.text-right
                .landing-headline
                  %h4.white THE ONLINE RESOURCE
                  %h4 for Ordering
                  %h4 Notice of Assessment 
                  %h4 Documents
              
              / %h3 Getting your last three years' Notices of Assessments couldn't be easier. <br>
              / .cta-title
              /   Simply follow these steps:
              .row
                .homepage-buttons              
                  .homepage-button
                    = link_to "New User<br><h4>ORDER NOW!</h4>".html_safe, new_agent_registration_path, class: 'btn btn-primary btn-raised'

                  .homepage-button
                    = link_to "Returning NOA Agent<br><h4>ORDER NOW!</h4>".html_safe, new_agent_session_path, class: 'btn btn-primary btn-raised' 
              .row
                .homepage-faqs
                  = link_to 'Frequently Asked Questions', faqs_path
             

