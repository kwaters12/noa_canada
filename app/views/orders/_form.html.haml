= simple_form_for @taxpayer do |f|  
  .col-md-6
    Do you have a completed T1013 Form?
    %br
    / = fields_for @order, :html => {:multipart => true} do |g|
    Click below to attach it
    = f.file_field :document
  .col-md-6
    .row
      .col-md-6
        / = @order.first_name
        = f.input :first_name, input_html: { class: 'form-control' }
      .col-md-6
        = f.input :last_name, input_html: { class: 'form-control' }
    .row
      .col-md-6
        = f.input :phone_number, input_html: { class: 'form-control' }
      .col-md-6
        = f.input :email, input_html: { class: 'form-control' }
    .row
      .col-md-6
        = f.input :sin, input_html: { class: 'form-control' }
      .col-md-6
        = f.input :dob, input_html: { class: 'form-control' }
    
      / .col-md-3
      /   = f.input :hassignature
      / .text-center
      /   .col-md-6
      /     = f.submit "Pay with Paypal", name: 'payment_method', value: 'Pay with Paypal',class: 'btn btn-default'
      /   .col-md-6  
      /     = f.submit "Pay with Credit Card", name: 'payment_method', value: 'Pay with Credit Card', class: 'btn btn-default'
      .text-center
        = f.submit "Process Order", class: "btn btn-default"

